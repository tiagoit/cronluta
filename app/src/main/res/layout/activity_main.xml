<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/roundCountSpinnerLabel"
        android:layout_width="82dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="@string/round_count"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/round_count" />

    <Spinner
        android:id="@+id/roundCountSpinner"
        android:layout_width="162dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roundDurationSpinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="88dp"
        android:text="@string/round_duration"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/round_duration" />

    <Spinner
        android:id="@+id/roundDurationSpinner"
        android:layout_width="162dp"
        android:layout_height="34dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pauseDurationSpinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="148dp"
        android:text="@string/pause_duration"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/pause_duration" />

    <Spinner
        android:id="@+id/pauseDurationSpinner"
        android:layout_width="162dp"
        android:layout_height="34dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="244dp"
        android:onClick="start"
        android:text="iniciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<Button-->
        <!--android:id="@+id/pauseButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="36dp"-->
        <!--android:layout_marginTop="236dp"-->
        <!--android:text="pausar"-->
        <!--app:layout_constraintStart_toEndOf="@+id/startButton"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:onClick="pause"/>-->

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="244dp"
        android:onClick="reset"
        android:text="resetar"
        app:layout_constraintStart_toEndOf="@+id/startButton"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/countdownTimer"
        android:layout_width="229dp"
        android:layout_height="90dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="352dp"
        android:text="02"
        android:textSize="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>